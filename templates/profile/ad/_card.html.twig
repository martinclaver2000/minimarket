
<div class="mb-1">
    <div class="row">
        <div class="col-3 px-0 pe-1">
            {% if ad.images|length > 0 %}
                {% set image = ad.images|first %}
                <a href="{{ path('app_ad', {slug:ad.slug}) }}"><img src="{{asset('build/dev/' ~ image.fileName) | imagine_filter('ad_thumb')}}" class="card-img-top" alt="..."></a>
            {% else %}
                <a href="{{ path('app_ad', {slug:ad.slug}) }}"><img src="https://via.placeholder.com/400x300" class="card-img-top" alt="..."></a>
            {% endif %}  
        </div>
        <div class="col-4 px-0">
            <a href="{{ path('app_ad', {slug:ad.slug}) }}" class="text-decoration-none">
                <b>{{ ad.title }}</b>
            </a>
            <div class="px-1"><b>${{ad.price | number_format(0, '.', ' ')}}</b></div>
            <div class="px-1 text-muted small"><em>{{ad.address}}</em></div>
            <div class="px-1 text-muted small">{{ad.createdAt|date('d F Y')}}</div>
        </div>
        <div class="col-2 px-0">
            <div>
                <i class="fa-regular fa-eye me-3"></i>{{ad.viewsCount}}
            </div>
            <div>
                <i class="fa-solid fa-phone me-3"></i>{{ad.phoneNumberContactCount}}
            </div>
            <div>
                <i class="fa-regular fa-comment text-primary me-3"></i>{{ad.messageContactCount}}
            </div>
            <div>
                <i class="fa-brands fa-whatsapp text-success me-3"></i>{{ad.whatsappContactCount}}
            </div>
            <div>
                <i class="fa-solid fa-heart text-danger me-3"></i>{{ad.favorites|length}} 
            </div>           
        </div>
        <div class="col-3 px-0">
            <div class="row">
                <div class="col-8">
                    <a href="#" class="btn btn-outline border form-control btn-sm">publish</a>
                </div>
                <div class="col-4">                    
                    <a class="btn btn-outline border form-control btn-sm h6" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        ...
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#">Publish</a></li>
                        <li><a class="dropdown-item" href="#">Edit</a></li>
                        <li><a class="dropdown-item" href="#">Delete</a></li>
                        <li><a class="dropdown-item" href="#">Sold</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>