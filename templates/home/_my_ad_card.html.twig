
<div class="mb-1">
    <div class="row">
        <div class="col-4 px-0 pe-1">
            {% if ad.images|length > 0 %}
                {% set image = ad.images|first %}
                <a href="{{ path('app_ad', {slug:ad.slug}) }}"><img src="{{asset('build/dev/' ~ image.fileName) | imagine_filter('ad_thumb')}}" class="card-img-top" alt="..."></a>
            {% else %}
                <a href="{{ path('app_ad', {slug:ad.slug}) }}"><img src="https://via.placeholder.com/400x300" class="card-img-top" alt="..."></a>
            {% endif %}
        </div>
        <div class="col-8 px-0">
            <h6>
                <a href="{{ path('app_ad', {slug:ad.slug}) }}" class="text-decoration-none">
                    <b>{{ad.title|u.truncate(25,'...')}}</b>
                </a>
            </h6>
            <div><b>{{ad.price | number_format(0, '.', ' ')}}</b></div> 
            <div>
                <i class="fa-regular fa-eye"></i>{{ad.viewsCount}}
                <i class="fa-solid fa-phone"></i>{{ad.phoneNumberContactCount}}
                <i class="fa-regular fa-comment text-primary"></i>{{ad.messageContactCount}}
                <i class="fa-brands fa-whatsapp text-success"></i>{{ad.whatsappContactCount}}
                <i class="fa-solid fa-heart text-danger"></i>{{ad.favorites|length}}
            </div>
        </div>
    </div>
</div>